<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

	<View
			android:id="@+id/status_bar"
			android:layout_width="match_parent"
			android:layout_height="0dp"/>

	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="56dp">

		<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center"
				android:text="@string/setting_password"
				android:textColor="@color/login_content"
				android:textSize="23sp"
				android:textStyle="bold"/>

		<ImageView
				android:id="@+id/reg_back"
				android:layout_width="44dp"
				android:layout_height="44dp"
				android:layout_centerVertical="true"
				android:layout_marginLeft="6dp"
				android:layout_marginTop="10dp"
				android:onClick="onClick"
				android:scaleType="centerCrop"
				android:src="@drawable/back_icon_black"/>
	</RelativeLayout>
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_marginLeft="44dp"
			android:background="@drawable/shape_round_gray_5dp"
			android:layout_marginRight="44dp"
			android:layout_marginTop="40dp"
			android:orientation="horizontal"
			android:gravity="center_vertical"
			android:layout_height="wrap_content">
		<EditText
				android:id="@+id/reg_login_pwd"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:background="@null"
				android:layout_height="48dp"
				android:hint="@string/login_password"
				android:gravity="center_vertical"
				android:inputType="textPassword"
				android:padding="10dp"
				android:maxLines="1"
				android:textColor="@color/login_content"
				android:textColorHint="@color/edit_bg"
				android:textCursorDrawable="@drawable/bg_edit_cursor_color"
				android:textSize="15dp"
				android:theme="@style/Edit_Style"/>
		<ImageView
				android:id="@+id/pwd_show"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:layout_marginLeft="8dp"
				android:visibility="invisible"
				android:layout_marginRight="8dp"
				android:onClick="onClick"
				android:scaleType="center"
				android:src="@drawable/edit_hide"/>
	</LinearLayout>
	<TextView
			android:layout_marginLeft="55dp"
			android:text="@string/combination_minimum_8_digits"
			android:layout_marginTop="5dp"
			android:textSize="11sp"
			android:textColor="@color/edit_bg"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_marginLeft="44dp"
			android:layout_marginRight="44dp"
			android:gravity="center_vertical"
			android:orientation="horizontal"
			android:background="@drawable/shape_round_gray_5dp"
			android:layout_marginTop="28dp"
			android:layout_height="wrap_content">

		<EditText
				android:id="@+id/reg_pay_pwd"
				android:layout_width="0dp"
				android:background="@null"
				android:layout_weight="1"
				android:layout_height="48dp"
				android:hint="@string/pay_password"
				android:gravity="center_vertical"
				android:inputType="numberPassword"
				android:padding="10dp"
				android:maxLength="6"
				android:maxLines="1"
				android:textColor="@color/login_content"
				android:textColorHint="@color/edit_bg"
				android:textCursorDrawable="@drawable/bg_edit_cursor_color"
				android:textSize="15dp"
				android:theme="@style/Edit_Style"/>
		<ImageView
				android:id="@+id/pay_pwd_show"
				android:layout_width="30dp"
				android:visibility="invisible"
				android:layout_height="30dp"
				android:layout_marginLeft="8dp"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="8dp"
				android:onClick="onClick"
				android:scaleType="center"
				android:src="@drawable/edit_hide"/>
	</LinearLayout>
	<TextView
			android:layout_marginLeft="55dp"
			android:text="@string/digit_alphanumeric_password_6"
			android:layout_marginTop="5dp"
			android:textSize="11sp"
			android:textColor="@color/edit_bg"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>


	<TextView
			android:id="@+id/reg_submit"
			android:layout_width="match_parent"
			android:layout_height="44dp"
			android:layout_marginLeft="44dp"
			android:layout_marginTop="65dp"
			android:layout_marginRight="44dp"
			android:background="@drawable/bg_login_submit"
			android:gravity="center"
			android:onClick="onClick"
			android:text="@string/next"
			android:textColor="@color/white"/>
</LinearLayout>