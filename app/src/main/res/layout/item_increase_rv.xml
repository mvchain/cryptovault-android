<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_increase_icon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginLeft="16dp"
        android:src="@mipmap/vp_logo" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_increase_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vp余额"
            android:textColor="@color/login_content"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_increase_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Vp余额"
            android:textColor="@color/login_edit_bg"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_increase_add"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_round_ching_15dp"
        android:gravity="center"
        android:text="添加"
        android:textColor="@color/white"
        android:textSize="12sp" />
</LinearLayout>