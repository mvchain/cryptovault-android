<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/fragment_grey"
              android:orientation="vertical">

	<View
			android:id="@+id/status_bar"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:background="@color/white"/>

	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:layout_below="@id/status_bar"
			android:background="@color/white">

		<TextView
				android:id="@+id/financial_title"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center"
				android:text="产品名称"
				android:textColor="@color/login_content"
				android:textSize="17sp"/>

		<ImageView
				android:id="@+id/back"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_centerVertical="true"
				android:layout_marginLeft="6dp"
				android:onClick="onClick"
				android:scaleType="center"
				android:src="@drawable/back_icon_black"/>
	</RelativeLayout>

	<ScrollView
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:fillViewport="true"
			android:layout_weight="1">

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center_horizontal"
				android:orientation="vertical">

			<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="16dp"
					android:layout_marginTop="14dp"
					android:layout_marginRight="16dp"
					android:background="@drawable/financial_top_bg"
					android:orientation="vertical"
					android:paddingLeft="16dp"
					android:paddingRight="16dp"
					android:paddingTop="14dp"
					android:paddingBottom="15dp">

				<TextView
						android:id="@+id/financia_income_hint"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_horizontal"
						android:text="预期年化收益率"
						android:textColor="@color/white"
						android:textSize="11sp"/>

				<TextView
						android:id="@+id/financia_income"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_horizontal"
						android:text="12-24"
						android:layout_below="@id/financia_income_hint"
						android:textColor="@color/white"
						android:textSize="33sp"/>

				<LinearLayout
						android:id="@+id/info_layout"
						android:layout_width="match_parent"
						android:layout_below="@id/financia_income"
						android:layout_height="wrap_content"
						android:layout_marginTop="15dp"
						android:orientation="horizontal">

					<LinearLayout
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:gravity="center_vertical"
							android:orientation="vertical">

						<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="理财周期"
								android:textColor="@color/white"
								android:textSize="11sp"/>

						<TextView
								android:id="@+id/time_cycle"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginTop="12dp"
								android:text="-"
								android:textColor="@color/white"
								android:textSize="13sp"/>
					</LinearLayout>

					<LinearLayout
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:gravity="center_vertical"
							android:orientation="vertical">

						<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="起投金额"
								android:textColor="@color/white"
								android:textSize="11sp"/>

						<TextView
								android:id="@+id/starting"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginTop="12dp"
								android:text="-"
								android:textColor="@color/white"
								android:textSize="13sp"/>
					</LinearLayout>
				</LinearLayout>
				<TextView
						android:id="@+id/remaining_amount"
						android:layout_below="@id/info_layout"
						android:layout_marginTop="13dp"
						android:textColor="@color/white"
						android:textSize="11sp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"/>
				<ProgressBar
						android:id="@+id/remaining_amount_progress"
						style="@style/Widget.AppCompat.ProgressBar.Horizontal"
						android:layout_width="match_parent"
						android:layout_below="@id/remaining_amount"
						android:progressDrawable="@drawable/white_progress_drawble"
						android:layout_marginTop="5dp"
						android:layout_height="3dp"/>
			</RelativeLayout>
			<LinearLayout android:layout_width="match_parent"
			              android:layout_marginBottom="26dp"
			              android:layout_marginTop="11dp"
			              android:layout_marginLeft="16dp"
			              android:layout_marginRight="16dp"
			              android:paddingLeft="15dp"
			              android:paddingRight="15dp"
			              android:paddingTop="7dp"
			              android:gravity="center_horizontal"
			              android:paddingBottom="7dp"
			              android:orientation="vertical"
			              android:background="@drawable/shape_round_white_5dp"
			              android:layout_height="wrap_content">
				<TextView
						android:layout_width="wrap_content"
						android:layout_height="20dp"
						android:textColor="#666666"
						android:text="产品介绍"/>


				<TextView
						android:id="@+id/content"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="7dp"
						android:textColor="@color/trand_gray"
						android:textSize="14sp"/>
				<TextView
						android:layout_width="wrap_content"
						android:textColor="#666666"
						android:layout_height="20dp"
						android:layout_marginTop="10dp"
						android:text="参与规则"/>


				<TextView
						android:id="@+id/rule"
						android:layout_width="match_parent"
						android:layout_marginTop="7dp"
						android:layout_height="wrap_content"
						android:textColor="@color/trand_gray"
						android:textSize="14sp"/>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>

	<LinearLayout
			android:id="@+id/sub_layout"
			android:layout_width="match_parent"
			android:layout_height="55dp"
			android:background="@color/white"
			android:orientation="horizontal">

		<TextView
				android:id="@+id/deposit"
				android:layout_width="match_parent"
				android:layout_height="44dp"
				android:layout_marginLeft="16dp"
				android:layout_marginTop="7dp"
				android:layout_marginRight="16dp"
				android:layout_marginBottom="2dp"
				android:background="@drawable/bg_toge_child_item_tv_blue_nocheck"
				android:gravity="center"
				android:enabled="false"
				android:onClick="onClick"
				android:text="存入"
				android:textColor="@color/select_button_tv_color"
				android:textSize="15sp"/>
	</LinearLayout>
</LinearLayout>