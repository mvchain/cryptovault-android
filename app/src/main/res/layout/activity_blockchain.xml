<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

	<View
			android:id="@+id/status_bar"
			android:layout_width="match_parent"
			android:layout_height="0dp"/>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:background="@color/white"
			android:gravity="center_vertical">

		<ImageView
				android:id="@+id/browser_back"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_marginLeft="5dp"
				android:onClick="onClick"
				android:scaleType="center"
				android:src="@drawable/back_icon_black"/>

		<TextView
				android:id="@+id/browser_title"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center"
				android:text="@string/blockchain_browser"
				android:textSize="17sp"/>

		<EditText
				android:id="@+id/browser_edit"
				android:layout_width="0dp"
				android:layout_height="36dp"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp"
				android:layout_weight="1"
				android:background="@drawable/bg_increase_edit"
				android:drawableLeft="@drawable/search_icon_drawable_edit"
				android:hint="@string/enter_public_key"
				android:imeOptions="actionSearch"
				android:maxLines="1"
				android:paddingLeft="15dp"
				android:paddingRight="15dp"
				android:singleLine="true"
				android:textColorHint="@color/edit_tv"
				android:textCursorDrawable="@drawable/bg_edit_cursor_color"
				android:textSize="15sp"
				android:visibility="gone"/>

		<ImageView
				android:id="@+id/browser_search"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:onClick="onClick"
				android:padding="5dp"
				android:scaleType="center"
				android:src="@drawable/search_icon_black"/>
	</LinearLayout>


	<android.support.v4.widget.SwipeRefreshLayout
			android:id="@+id/browser_swipe"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:focusable="true"
			android:focusableInTouchMode="true">

		<ScrollView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:fillViewport="true">

			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="vertical">

				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="168dp"
						android:layout_margin="20dp"
						android:background="@drawable/option_top_bg"
						android:orientation="vertical">

					<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="0dp"
							android:layout_weight="1">

						<RelativeLayout
								android:layout_width="0dp"
								android:layout_height="match_parent"
								android:layout_weight="1">

							<TextView
									android:id="@+id/browser_height"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_centerHorizontal="true"
									android:layout_marginTop="20dp"
									android:text="-"
									android:textColor="@color/white"
									android:textSize="21sp"
									android:textStyle="bold"/>

							<TextView
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_below="@id/browser_height"
									android:layout_centerHorizontal="true"
									android:layout_marginTop="3dp"
									android:text="@string/block_height"
									android:textColor="@color/white"
									android:textSize="13sp"/>
						</RelativeLayout>

						<RelativeLayout
								android:layout_width="0dp"
								android:layout_height="match_parent"
								android:layout_weight="1">

							<TextView
									android:id="@+id/browser_number"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_centerHorizontal="true"
									android:layout_marginTop="20dp"
									android:text="-"
									android:textColor="@color/white"
									android:textSize="21sp"
									android:textStyle="bold"/>

							<TextView
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_below="@id/browser_number"
									android:layout_centerHorizontal="true"
									android:layout_marginTop="3dp"
									android:text="@string/number_of_transactions"
									android:textColor="@color/white"
									android:textSize="13sp"/>
						</RelativeLayout>
					</LinearLayout>

					<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="0dp"
							android:layout_weight="1">

						<RelativeLayout
								android:layout_width="0dp"
								android:layout_height="match_parent"
								android:layout_weight="1">

							<TextView
									android:id="@+id/browser_timer"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_centerHorizontal="true"
									android:layout_marginTop="15dp"
									android:text="- s"
									android:textColor="@color/white"
									android:textSize="21sp"
									android:textStyle="bold"/>

							<TextView
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_below="@id/browser_timer"
									android:layout_centerHorizontal="true"
									android:layout_marginTop="3dp"
									android:text="@string/confirm_the_time"
									android:textColor="@color/white"
									android:textSize="13sp"/>
						</RelativeLayout>

						<RelativeLayout
								android:layout_width="0dp"
								android:layout_height="match_parent"
								android:layout_weight="1"/>
					</LinearLayout>
				</LinearLayout>

				<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="22dp"
						android:text="@string/blockchain_information"
						android:textColor="@color/login_content"
						android:textSize="17sp"
						android:textStyle="bold"/>

				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="22dp"
						android:layout_marginTop="16dp"
						android:layout_marginRight="22dp"
						android:orientation="horizontal">

					<LinearLayout
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:orientation="vertical">

						<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginBottom="16dp"
								android:text="@string/kernel_version"
								android:textColor="@color/trand_gray"
								android:textSize="13sp"/>

						<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginBottom="16dp"
								android:text="@string/basic_assets"
								android:textColor="@color/trand_gray"
								android:textSize="13sp"/>

						<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginBottom="16dp"
								android:text="@string/latest_time"
								android:textColor="@color/trand_gray"
								android:textSize="13sp"/>
					</LinearLayout>

					<LinearLayout
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:orientation="vertical">

						<TextView
								android:id="@+id/browser_version"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_marginBottom="16dp"
								android:gravity="right"
								android:text="-"
								android:textColor="@color/trand_gray"
								android:textSize="13sp"/>

						<TextView
								android:id="@+id/browser_price"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_marginBottom="16dp"
								android:gravity="right"
								android:text="-"
								android:textColor="@color/trand_gray"
								android:textSize="13sp"/>

						<TextView
								android:id="@+id/browser_news_time"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_marginBottom="16dp"
								android:gravity="right"
								android:text="-"
								android:textColor="@color/trand_gray"
								android:textSize="13sp"/>
					</LinearLayout>
				</LinearLayout>

				<View
						android:layout_width="match_parent"
						android:layout_height="12dp"
						android:background="#FBFBFB"/>

				<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="25dp"
						android:layout_marginLeft="22dp"
						android:layout_marginTop="16dp"
						android:layout_marginRight="22dp">

					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_alignParentBottom="true"
							android:text="@string/block_information"
							android:textColor="@color/login_content"
							android:textSize="17sp"
							android:textStyle="bold"/>

					<TextView
							android:id="@+id/browser_block_menu"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_alignParentRight="true"
							android:layout_alignParentBottom="true"
							android:layout_marginLeft="22dp"
							android:onClick="onClick"
							android:text="@string/menu"
							android:textColor="@color/login_content"
							android:textSize="13sp"/>
				</RelativeLayout>

				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="22dp"
						android:layout_marginTop="16dp"
						android:layout_marginRight="22dp"
						android:orientation="horizontal">

					<TextView
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:text="@string/block_height"
							android:textColor="@color/trand_gray"
							android:textSize="13sp"/>

					<TextView
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:gravity="center"
							android:text="@string/number_of_transactions"
							android:textColor="@color/trand_gray"
							android:textSize="13sp"/>

					<TextView
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:gravity="right"
							android:text="@string/block_time"
							android:textColor="@color/trand_gray"
							android:textSize="13sp"/>
				</LinearLayout>

				<View
						android:layout_width="match_parent"
						android:layout_height="0dp"
						android:layout_marginLeft="22dp"
						android:layout_marginTop="15dp"
						android:layout_marginRight="22dp"
						android:layout_marginBottom="15dp"/>

				<android.support.v7.widget.RecyclerView
						android:id="@+id/browser_block_rv"
						android:layout_width="match_parent"
						android:layout_height="0dp"
						android:layout_marginLeft="22dp"
						android:layout_marginRight="22dp"
						android:layout_marginBottom="17dp"
						android:layout_weight="1"/>

				<View
						android:layout_width="match_parent"
						android:layout_height="12dp"
						android:background="#FBFBFB"/>


				<TextView
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:layout_marginLeft="22dp"
						android:layout_marginTop="16dp"
						android:layout_marginRight="22dp"
						android:text="@string/latest_transaction"
						android:textColor="@color/login_content"
						android:textSize="17sp"
						android:textStyle="bold"/>

				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="22dp"
						android:layout_marginTop="16dp"
						android:layout_marginRight="22dp"
						android:orientation="horizontal">

					<TextView
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:gravity="center"
							android:text="@string/trading_hash"
							android:textColor="@color/trand_gray"
							android:textSize="13sp"/>

					<TextView
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:gravity="center"
							android:layout_weight="1"
							android:text="@string/transaction_time"
							android:textColor="@color/trand_gray"
							android:textSize="13sp"/>
				</LinearLayout>

				<View
						android:layout_width="match_parent"
						android:layout_height="0dp"
						android:layout_marginLeft="22dp"
						android:layout_marginTop="15dp"
						android:layout_marginRight="22dp"
						android:layout_marginBottom="15dp"/>

				<android.support.v7.widget.RecyclerView
						android:id="@+id/browser_transfer_rv"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="22dp"
						android:layout_marginRight="22dp"
						android:layout_marginBottom="17dp"/>

				<View
						android:layout_width="match_parent"
						android:layout_height="12dp"
						android:background="#FBFBFB"/>

				<TextView
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:layout_marginLeft="22dp"
						android:layout_marginTop="16dp"
						android:layout_marginRight="22dp"
						android:text="@string/node_list"
						android:textColor="@color/login_content"
						android:textSize="17sp"
						android:textStyle="bold"/>

				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="22dp"
						android:layout_marginTop="16dp"
						android:layout_marginRight="22dp"
						android:orientation="horizontal">

					<TextView
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:gravity="center"
							android:text="@string/node"
							android:textColor="@color/trand_gray"
							android:textSize="13sp"/>

					<TextView
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:gravity="center"
							android:text="@string/synchronous_height"
							android:textColor="@color/trand_gray"
							android:textSize="13sp"/>
				</LinearLayout>

				<View
						android:layout_width="match_parent"
						android:layout_height="0dp"
						android:layout_marginLeft="22dp"
						android:layout_marginTop="15dp"
						android:layout_marginRight="22dp"
						android:layout_marginBottom="15dp"/>

				<android.support.v7.widget.RecyclerView
						android:id="@+id/browser_node_rv"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="22dp"
						android:layout_marginRight="22dp"
						android:layout_marginBottom="17dp"/>

				<View
						android:layout_width="match_parent"
						android:layout_height="12dp"
						android:background="#FBFBFB"/>

				<TextView
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:layout_marginLeft="22dp"
						android:layout_marginTop="16dp"
						android:layout_marginRight="22dp"
						android:text="@string/node_map"
						android:textColor="@color/login_content"
						android:textSize="17sp"
						android:textStyle="bold"/>

				<ImageView
						android:layout_width="match_parent"
						android:layout_height="180dp"
						android:layout_marginLeft="22dp"
						android:layout_marginTop="16dp"
						android:layout_marginRight="22dp"
						android:layout_marginBottom="16dp"
						android:scaleType="centerCrop"
						android:src="@drawable/node_img"/>
			</LinearLayout>
		</ScrollView>
	</android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>