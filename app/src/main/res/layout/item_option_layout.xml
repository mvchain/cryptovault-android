<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/shape_round_white_5dp"
    android:orientation="vertical"
    android:padding="16dp">

    <com.allen.library.SuperTextView
        android:id="@+id/option_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:gravity="center_vertical"
        app:sDividerLineHeight="0dp"
        app:sLeftBottomTextColor="@color/toge_gray"
        app:sLeftBottomTextString="剩余签到"
        app:sLeftTextGravity="left"
        app:sLeftTopTextColor="@color/login_content"
        app:sLeftTopTextString="产品名称"
        app:sLeftViewGravity="left_center"
        app:sRightIconRes="@drawable/next_icon_black"
        app:sUseRipple="false" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="今日收益"
            android:textColor="@color/toge_gray"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="持仓金额"
            android:textColor="@color/toge_gray"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/yesterday_earnings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/login_content"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/option_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/login_content"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>