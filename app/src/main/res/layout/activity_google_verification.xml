<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/white"
              android:layout_height="match_parent">
	<View
			android:id="@+id/status_bar"
			android:layout_width="match_parent"
			android:layout_height="0dp"/>

	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:layout_below="@id/status_bar">

		<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center"
				android:text="Google安全验证"
				android:textColor="@color/login_content"
				android:textSize="17sp"/>

		<ImageView
				android:id="@+id/google_back"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_centerVertical="true"
				android:layout_marginLeft="6dp"
				android:scaleType="center"
				android:src="@drawable/back_icon_black"/>
	</RelativeLayout>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_marginLeft="44dp"
			android:layout_marginRight="44dp"
			android:gravity="center_vertical"
			android:orientation="horizontal"
			android:background="@drawable/shape_round_gray_5dp"
			android:layout_marginTop="28dp"
			android:layout_height="wrap_content">

		<EditText
				android:id="@+id/google_pwd"
				android:layout_width="0dp"
				android:background="@null"
				android:layout_weight="1"
				android:layout_height="48dp"
				android:hint="输入登陆密码"
				android:gravity="center_vertical"
				android:inputType="textPassword"
				android:padding="10dp"
				android:maxLines="1"
				android:textColor="@color/login_content"
				android:textColorHint="@color/edit_bg"
				android:textCursorDrawable="@drawable/bg_edit_cursor_color"
				android:textSize="15dp"
				android:theme="@style/Edit_Style"/>
		<ImageView
				android:id="@+id/pay_pwd_show"
				android:layout_width="30dp"
				android:visibility="invisible"
				android:layout_height="30dp"
				android:layout_marginLeft="8dp"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="8dp"
				android:onClick="onClick"
				android:scaleType="center"
				android:src="@drawable/edit_hide"/>
	</LinearLayout>
	<EditText
			android:id="@+id/google_code"
			android:layout_width="match_parent"
			android:background="@drawable/shape_round_gray_5dp"
			android:layout_height="48dp"
			android:layout_marginTop="15dp"
			android:hint="输入Google验证码"
			android:layout_marginLeft="44dp"
			android:layout_marginRight="44dp"
			android:gravity="center_vertical"
			android:inputType="number"
			android:padding="10dp"
			android:maxLength="6"
			android:maxLines="1"
			android:textColor="@color/login_content"
			android:textColorHint="@color/edit_bg"
			android:textCursorDrawable="@drawable/bg_edit_cursor_color"
			android:textSize="15dp"
			android:theme="@style/Edit_Style"/>
	<View
			android:layout_weight="1"
			android:layout_width="match_parent"
			android:layout_height="0dp"/>
	<TextView
			android:id="@+id/google_submit"
			android:layout_width="match_parent"
			android:layout_height="44dp"
			android:layout_marginLeft="44dp"
			android:layout_marginBottom="65dp"
			android:layout_marginRight="44dp"
			android:background="@drawable/bg_login_submit"
			android:gravity="center"
			android:onClick="onClick"
			android:text="开启Google验证"
			android:textColor="@color/white"/>
</LinearLayout>