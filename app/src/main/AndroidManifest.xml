<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mvc.cryptovault_android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/vp_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/vp_logo"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".activity.StartActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.login" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.DetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MsgActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.HistroyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.AboutActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.IncreaseCurrencyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.QCodeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.TogeHistroyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MineReceiptQRCodeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.BTCTransferActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.PayCodeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.VPBalanceWithdrawalActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.CrowdfundingAppointmentActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.TrandRecordingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.TrandPurhAndSellActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.TrandPurhAndSellItemActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.TrandOrderActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>