<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/shape_round_white_12dp"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="12dp"
    android:paddingRight="16dp"
    android:paddingBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_item_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:text="购买 USDT/VRT"
            android:textColor="@color/login_content"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_item_submit"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:background="@drawable/bg_toge_child_item_tv_gray"
            android:gravity="center"
            android:text="已成交"
            android:textColor="@color/gray_white" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="8dp"
        android:background="@color/lines_bg" />

    <LinearLayout
        android:id="@+id/order_item_num_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_item_num_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="单号"
            android:textColor="@color/login_content" />

        <TextView
            android:id="@+id/order_item_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|right"
            android:textColor="@color/login_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/order_item_seller_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_item_seller_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="卖家"
            android:textColor="@color/login_content" />

        <TextView
            android:id="@+id/order_item_seller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|right"
            android:textColor="@color/login_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/order_item_purchase_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_item_purchase_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="购买量"
            android:textColor="@color/login_content" />

        <TextView
            android:id="@+id/order_item_purchase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="123456789"
            android:textColor="@color/login_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/order_item_pendpurh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_item_pendpurh_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="购买数量"
            android:textColor="@color/login_content" />

        <TextView
            android:id="@+id/order_item_pendpurh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="123456789"
            android:textColor="@color/login_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/order_item_forsale_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_item_forsale_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="价格"
            android:textColor="@color/login_content" />

        <TextView
            android:id="@+id/order_item_forsale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="123456789"
            android:textColor="@color/login_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/order_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:gravity="center|left"
        android:text="2018-11-21 10:32"
        android:textColor="@color/msg_time_gray"
        android:textSize="11sp" />
</LinearLayout>