<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recording_layout"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/recor_icon"
        android:layout_width="32dp"
        android:scaleType="fitXY"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:src="@color/red" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/recor_icon"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recor_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="阿三"
            android:textColor="@color/login_content"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recor_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recor_nickname"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/recor_icon"
            android:text="购买限额：15000"
            android:textColor="@color/trand_gray"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/recor_price"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="1234567.1234"
        android:textColor="@color/login_content"
        android:textSize="14sp"
        android:textStyle="bold" />
</RelativeLayout>