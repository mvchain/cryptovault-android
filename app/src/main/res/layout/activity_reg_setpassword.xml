<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reg_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <ImageView
        android:id="@+id/reg_back"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:onClick="onClick"
        android:scaleType="centerCrop"
        android:src="@drawable/back_icon_black" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="10dp"
        android:text="设置密码"
        android:textColor="@color/login_content"
        android:textSize="34sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="38dp">

        <EditText
            android:id="@+id/reg_login_pwd"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/bg_login_edit"
            android:gravity="center_vertical"
            android:hint="请输入登陆密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingLeft="32dp"
            android:paddingRight="15dp"
            android:textColor="@color/login_content"
            android:textColorHint="#999A9D"
            android:textCursorDrawable="@drawable/bg_edit_cursor_color"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/login_pwd_show"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:background="@color/white"
            android:onClick="onClick"
            android:scaleType="center"
            android:src="@drawable/edit_hide"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="38dp">

        <EditText
            android:id="@+id/reg_pay_pwd"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/bg_login_edit"
            android:gravity="center_vertical"
            android:hint="请输入支付密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingLeft="32dp"
            android:paddingRight="15dp"
            android:textColor="@color/login_content"
            android:textColorHint="#999A9D"
            android:textCursorDrawable="@drawable/bg_edit_cursor_color"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/pay_pwd_show"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:background="@color/white"
            android:onClick="onClick"
            android:scaleType="center"
            android:src="@drawable/edit_hide"
            android:visibility="invisible" />
    </RelativeLayout>


    <TextView
        android:id="@+id/reg_submit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="65dp"
        android:layout_marginRight="116dp"
        android:background="@drawable/bg_toge_child_item_tv_blue_nocheck"
        android:enabled="false"
        android:gravity="center"
        android:onClick="onClick"
        android:text="下一步"
        android:textColor="@color/white" />
</LinearLayout>