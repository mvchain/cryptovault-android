<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white">

        <TextView
            android:id="@+id/toge_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/navi_toge"
            android:textColor="@color/login_content"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/toge_publish"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:drawableTop="@drawable/facoin"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/toge_left_title"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/toge_histroy"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:drawableTop="@drawable/order"
            android:text="@string/toge_right_title"
            android:textSize="10sp"
            android:drawablePadding="3dp"
            android:gravity="center" />
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/toge_table"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        app:tabIndicatorColor="@color/login_content"
        app:tabSelectedTextColor="@color/login_content" />

    <android.support.v4.view.ViewPager
        android:id="@+id/toge_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>