<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white" />

    <RelativeLayout
		    android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_below="@id/status_bar"
        android:background="@color/white">

        <TextView
		        android:id="@+id/toolbar_title"
		        android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/set_login_password"
            android:textColor="@color/login_content"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:onClick="onClick"
            android:scaleType="center"
            android:src="@drawable/back_icon_black" />
    </RelativeLayout>

    <LinearLayout
		    android:layout_width="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/shape_round_gray_5dp"
            android:layout_height="wrap_content">

        <EditText
		        android:id="@+id/old_pwd"
		        android:layout_width="0dp"
                android:background="@null"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:hint="输入当前登录密码"
                android:gravity="center_vertical"
                android:inputType="textPassword"
                android:padding="10dp"
                android:maxLines="1"
                android:textColor="@color/login_content"
                android:textColorHint="@color/edit_bg"
                android:textCursorDrawable="@drawable/bg_edit_cursor_color"
                android:textSize="15dp"
                android:theme="@style/Edit_Style"/>
        <ImageView
                android:id="@+id/old_pwd_show"
                android:layout_width="30dp"
                android:visibility="invisible"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:onClick="onClick"
                android:scaleType="center"
                android:src="@drawable/edit_hide"/>
    </LinearLayout>

    <LinearLayout
		    android:layout_width="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/shape_round_gray_5dp"
            android:layout_height="wrap_content">

        <EditText
		        android:id="@+id/new_pwd"
		        android:layout_width="0dp"
                android:background="@null"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:hint="输入新登录密码"
                android:gravity="center_vertical"
                android:inputType="textPassword"
                android:padding="10dp"
                android:maxLines="1"
                android:textColor="@color/login_content"
                android:textColorHint="@color/edit_bg"
                android:textCursorDrawable="@drawable/bg_edit_cursor_color"
                android:textSize="15dp"
                android:theme="@style/Edit_Style"/>
        <ImageView
                android:id="@+id/new_pwd_show"
                android:layout_width="30dp"
                android:visibility="invisible"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:onClick="onClick"
                android:scaleType="center"
                android:src="@drawable/edit_hide"/>
    </LinearLayout>

    <TextView
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="130dp"
        android:layout_marginRight="116dp"
        android:background="@drawable/bg_login_submit"
        android:gravity="center"
        android:onClick="onClick"
        android:text="确认修改"
        android:textColor="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/forget_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="35dp"
        android:onClick="onClick"
        android:text="忘记登录密码？"
        android:textColor="@color/login_edit_bg" />
</LinearLayout>