<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white">

        <TextView
            android:id="@+id/toge_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="众筹"
            android:textColor="@color/login_content"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/toge_histroy"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:src="@drawable/list_icon_black" />
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/toge_table"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white" />

    <com.mvc.cryptovault_android.view.NoScrollViewPager
        android:id="@+id/toge_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>