<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

	<View
			android:id="@+id/status_bar"
			android:layout_width="match_parent"
			android:layout_height="0dp"/>

	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="56dp">

		<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center"
				android:text="@string/login"
				android:textColor="@color/login_content"
				android:textSize="24sp"
				android:textStyle="bold"/>

		<ImageView
				android:id="@+id/back"
				android:layout_width="44dp"
				android:layout_height="44dp"
				android:layout_centerVertical="true"
				android:layout_marginLeft="6dp"
				android:layout_marginTop="10dp"
				android:onClick="onClick"
				android:scaleType="centerCrop"
				android:src="@drawable/back_icon_black" />
	</RelativeLayout>

	<EditText
			android:id="@+id/login_phone"
			android:layout_width="match_parent"
			android:layout_height="44dp"
			android:gravity="center_vertical"
			android:hint="@string/email"
			android:layout_marginLeft="44dp"
			android:layout_marginTop="46dp"
			android:background="@drawable/shape_round_gray_5dp"
			android:layout_marginRight="44dp"
			android:inputType="textEmailAddress"
			android:maxLines="1"
			android:textColor="@color/login_content"
			android:padding="10dp"
			android:textColorHint="@color/edit_bg"
			android:textCursorDrawable="@drawable/bg_edit_cursor_color"
			android:textSize="14dp"
			android:theme="@style/Edit_Style"/>
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_marginLeft="44dp"
			android:layout_marginRight="44dp"
			android:gravity="center_vertical"
			android:orientation="horizontal"
			android:background="@drawable/shape_round_gray_5dp"
			android:layout_marginTop="15dp"
			android:layout_height="wrap_content">

		<EditText
				android:id="@+id/login_pwd"
				android:layout_width="0dp"
				android:background="@null"
				android:layout_weight="1"
				android:layout_height="48dp"
				android:hint="@string/password"
				android:gravity="center_vertical"
				android:inputType="textPassword"
				android:padding="10dp"
				android:maxLines="1"
				android:textColor="@color/login_content"
				android:textColorHint="@color/edit_bg"
				android:textCursorDrawable="@drawable/bg_edit_cursor_color"
				android:textSize="15dp"
				android:theme="@style/Edit_Style"/>
		<ImageView
				android:id="@+id/login_pwd_show"
				android:layout_width="30dp"
				android:visibility="invisible"
				android:layout_height="30dp"
				android:layout_marginLeft="8dp"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="8dp"
				android:onClick="onClick"
				android:scaleType="center"
				android:src="@drawable/edit_hide"/>
	</LinearLayout>


	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="48dp"
			android:layout_marginLeft="44dp"
			android:layout_marginTop="15dp"
			android:layout_marginRight="44dp"
			android:background="@drawable/shape_round_gray_5dp"
			android:gravity="center_vertical"
			android:orientation="horizontal">


		<EditText
				android:id="@+id/login_code"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginRight="17dp"
				android:layout_weight="1"
				android:background="@null"
				android:gravity="center_vertical"
				android:hint="@string/please_enter_the_email"
				android:inputType="number"
				android:maxLines="1"
				android:maxLength="6"
				android:padding="10dp"
				android:textColor="@color/login_content"
				android:textColorHint="@color/edit_bg"
				android:textCursorDrawable="@drawable/bg_edit_cursor_color"
				android:textSize="14dp"
				android:theme="@style/Edit_Style"/>

		<TextView
				android:id="@+id/send_code"
				android:layout_width="105dp"
				android:layout_height="35dp"
				android:layout_marginRight="19dp"
				android:background="@drawable/shape_sendcode_bg"
				android:gravity="center"
				android:onClick="onClick"
				android:paddingLeft="7dp"
				android:paddingTop="5dp"
				android:paddingRight="7dp"
				android:paddingBottom="5dp"
				android:text="@string/send_code"
				android:textColor="@color/send_code_tv_bg"
				android:textSize="15sp"/>
	</LinearLayout>

	<TextView
			android:id="@+id/login_forget_pwd"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="44dp"
			android:layout_marginTop="10dp"
			android:onClick="onClick"
			android:text="@string/forget_password"
			android:textColor="@color/trand_gray"
			android:textSize="15sp"/>
	<View
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"/>
	<Button
			android:id="@+id/login_submit"
			android:layout_width="match_parent"
			android:layout_height="44dp"
			android:onClick="onClick"
			android:layout_marginLeft="44dp"
			android:layout_marginRight="44dp"
			android:layout_marginBottom="45dp"
			android:background="@drawable/bg_login_submit"
			android:text="@string/login"
			android:textColor="@color/white"/>


</LinearLayout>