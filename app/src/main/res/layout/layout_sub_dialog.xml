<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:background="@drawable/shape_round_white_12dp"
        android:paddingLeft="26dp"
        android:paddingRight="26dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="45dp"
        android:paddingBottom="30dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/hint_title"
            android:textColor="@color/login_content"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="33dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/hint_cancle"
                android:text="@string/cancel"
                android:gravity="center"
                android:background="@drawable/shape_hint_dialog_cancle"
                android:textColor="@color/select_blue"
                android:textSize="17sp"
                android:layout_width="114dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/hint_enter"
                android:background="@drawable/bg_login_submit"
                android:text="@string/determine"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_width="114dp"
                android:layout_height="40dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>