<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/fragment_grey"
              android:layout_height="match_parent">
	<View
			android:id="@+id/status_bar"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:background="@color/white"/>
	<RelativeLayout
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:background="@color/white"
			android:layout_height="44dp">
		<TextView
				android:text="@string/mvc_trading"
				android:gravity="center"
				android:textSize="17sp"
				android:textColor="#333333"
				android:textStyle="bold"
				android:layout_width="match_parent"
				android:layout_height="match_parent"/>
		<TextView
				android:id="@+id/select_mvc"
				android:drawableRight="@drawable/down_tab"
				android:drawablePadding="5dp"
				android:layout_centerVertical="true"
				android:layout_marginLeft="13dp"
				android:textSize="11sp"
				android:gravity="center"
				android:paddingLeft="7dp"
				android:paddingTop="2dp"
				android:paddingBottom="2dp"
				android:paddingRight="7dp"
				android:background="@drawable/shape_trading_left_bg"
				android:layout_width="wrap_content"
				android:layout_height="21dp"/>
		<ImageView
				android:id="@+id/menu"
				android:layout_width="44dp"
				android:src="@drawable/trade_mvc_icon"
				android:scaleType="center"
				android:layout_alignParentRight="true"
				android:layout_height="44dp"/>
	</RelativeLayout>

	<FrameLayout android:layout_width="match_parent"
	             android:layout_height="match_parent">
		<LinearLayout android:layout_width="match_parent"
		              android:orientation="vertical"
		              android:layout_height="match_parent">
			<RelativeLayout
					android:layout_width="match_parent"
					android:layout_marginTop="10dp"
					android:layout_marginLeft="16dp"
					android:layout_marginRight="16dp"
					android:layout_height="wrap_content"
					android:background="@drawable/shape_round_white_12dp"
					android:orientation="horizontal"
					android:paddingLeft="16dp"
					android:paddingTop="11dp"
					android:paddingRight="16dp"
					android:paddingBottom="11dp">

				<TextView
						android:id="@+id/current_hint"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/current_price"
						android:textColor="@color/msg_time_gray"
						android:textSize="12sp"/>

				<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerHorizontal="true"
						android:text="@string/h24_highest"
						android:textColor="@color/msg_time_gray"
						android:textSize="12sp"/>

				<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:text="@string/h24_minimum"
						android:textColor="@color/msg_time_gray"
						android:textSize="12sp"/>

				<TextView
						android:id="@+id/recording_current_tv"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_below="@id/current_hint"
						android:layout_marginTop="5dp"
						android:text="-"
						android:textColor="@color/login_content"
						android:textSize="12sp"/>

				<TextView
						android:id="@+id/recording_day_max_tv"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_below="@id/current_hint"
						android:layout_centerHorizontal="true"
						android:layout_marginTop="5dp"
						android:text="-"
						android:textColor="@color/login_content"
						android:textSize="12sp"/>

				<TextView
						android:id="@+id/recording_day_min_tv"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_below="@id/current_hint"
						android:layout_alignParentRight="true"
						android:layout_marginTop="5dp"
						android:text="-"
						android:textColor="@color/login_content"
						android:textSize="12sp"/>
			</RelativeLayout>
			<LinearLayout android:layout_width="match_parent"
			              android:layout_marginLeft="16dp"
			              android:layout_marginRight="16dp"
			              android:layout_marginTop="10dp"
			              android:orientation="vertical"
			              android:background="@drawable/shape_round2_white_12dp"
			              android:layout_height="match_parent">
				<RadioGroup
						android:layout_width="match_parent"
						android:layout_height="36dp"
						android:layout_marginLeft="10dp"
						android:layout_marginTop="12dp"
						android:layout_marginRight="10dp"
						android:background="@drawable/shape_radiobuttom_gray_18dp"
						android:gravity="bottom"
						android:orientation="horizontal">

					<RadioButton
							android:id="@+id/recording_out_radio"
							android:layout_width="0dp"
							android:layout_height="36dp"
							android:layout_weight="1"
							android:background="@drawable/select_recording_radio"
							android:button="@null"
							android:checked="true"
							android:gravity="center"
							android:text="@string/buy_mvc"
							android:textColor="@color/select_recording_radio"/>

					<RadioButton
							android:id="@+id/recording_in_radio"
							android:layout_width="0dp"
							android:layout_height="36dp"
							android:layout_weight="1"
							android:background="@drawable/select_recording_radio"
							android:button="@null"
							android:gravity="center"
							android:text="@string/sell_mvc"
							android:textColor="@color/select_recording_radio"/>
				</RadioGroup>
				<com.mvc.ttpay_android.view.NoScrollViewPager
						android:id="@+id/recording_vp"
						android:layout_width="match_parent"
						android:layout_height="0dp"
						android:layout_weight="1"
						android:background="@color/white"/>
			</LinearLayout>
		</LinearLayout>

		<View
				android:id="@+id/mask"
				android:visibility="invisible"
				android:background="#66333333"
				android:layout_width="match_parent"
				android:layout_height="match_parent"/>

	</FrameLayout>
</LinearLayout>