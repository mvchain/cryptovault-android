<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/publish_child_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:background="@drawable/shape_round_white_5dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="12dp">

    <RelativeLayout
        android:layout_width="64dp"
        android:layout_height="64dp">

        <android.support.v7.widget.CardView
            android:id="@+id/icon_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="0dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/publish_child_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="12dp">

        <TextView
            android:id="@+id/publish_child_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/login_content"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/publish_child_recevie_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:textColor="@color/trand_gray"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/publish_child_recevie_bespoke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="bottom|left"
            android:textColor="@color/trand_gray"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:layout_width="13dp"
        android:layout_height="21dp"
        android:background="@drawable/next_icon_black" />
</LinearLayout>