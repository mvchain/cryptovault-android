<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_tras"
    android:orientation="vertical">

    <View
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:scaleType="center"
            android:id="@+id/m_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="6dp"
            android:src="@drawable/back_icon_black" />

        <TextView
            android:id="@+id/m_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="BTC收款"
            android:textColor="@color/login_content"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/m_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="6dp"
            android:padding="8dp"
            android:src="@drawable/share_icon_black" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/shape_round_white_16dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="41dp">

            <TextView
                android:id="@+id/m_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:text="BTC收款地址"
                android:textColor="@color/login_content"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/m_hash"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="0x2051dd2b51dd2b51dd2b51dd2b51dd2b51dd2ba196ccc2448"
                android:textColor="@color/login_content"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/m_qc_img"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_marginTop="20dp"
                android:text="BTC收款地址"
                android:textColor="@color/login_content"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/m_protrait"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/portrait_icon" />

    </RelativeLayout>

</LinearLayout>