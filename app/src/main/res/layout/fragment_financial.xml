<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/fragment_grey"
              android:orientation="vertical">

	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="44dp"
			android:background="@drawable/home_top_toolbar"
			android:orientation="horizontal">

		<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center"
				android:text="@string/navi_financial"
				android:textColor="@color/white"
				android:textSize="17sp"/>

		<TextView
				android:id="@+id/my_option"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_alignParentRight="true"
				android:textColor="@color/white"
				android:gravity="center"
				android:padding="10dp"
				android:text="我的持仓"
				android:textSize="13sp"/>
	</RelativeLayout>

	<android.support.v4.widget.SwipeRefreshLayout
			android:id="@+id/refresh"
			android:layout_width="match_parent"
			android:layout_height="match_parent">

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">

			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@drawable/home_top_bg"
					android:orientation="vertical"
					android:paddingTop="14dp"
					android:paddingBottom="17dp">

				<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="理财总资产"
						android:layout_marginLeft="30dp"
						android:textColor="@color/white"
						android:textSize="15sp"/>

				<TextView
						android:id="@+id/me_financia"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="30dp"
						android:text="-"
						android:textColor="@color/white"
						android:textSize="33sp"/>

				<LinearLayout
						android:layout_width="match_parent"
						android:paddingLeft="30dp"
						android:paddingRight="30dp"
						android:layout_height="wrap_content"
						android:layout_marginTop="14dp"
						android:orientation="horizontal">

					<LinearLayout
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:orientation="vertical">

						<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="今日收益"
								android:textColor="#66FFFFFF"
								android:textSize="12sp"/>

						<TextView
								android:id="@+id/yesterday_earnings"
								android:layout_width="wrap_content"
								android:layout_marginTop="1dp"
								android:layout_height="wrap_content"
								android:text="-"
								android:textColor="@color/white"
								android:textSize="15sp"/>
					</LinearLayout>

					<LinearLayout
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:orientation="vertical">

						<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:textColor="#66FFFFFF"
								android:text="累计收益"
								android:textSize="12sp"/>

						<TextView
								android:id="@+id/all_earnings"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginTop="1dp"
								android:text="-"
								android:textColor="@color/white"
								android:textSize="15sp"/>
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>

			<android.support.v7.widget.RecyclerView
					android:id="@+id/financial_recyclerview"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginTop="12dp"
					android:paddingLeft="16dp"
					android:paddingRight="16dp"
					app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>
		</LinearLayout>
	</android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>